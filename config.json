{
    "name": "CRNN_Net",
    "n_gpu": 1,

    "arch": {
        "type": "CRNN",
        "args": {
            "imgH": 48,
            "nc": 1,
            "nclass": 4190,
            "nh": 256
        }
    },

    "data_loader": {
        "type": "TextImageDataLoader",
        "args":{
            "data_dir": "out",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 4,
            "imgH": 48,
            "imgW": 850,
            "keep_ratio" : false
        }
    },
    "data_loader_test": {
        "type": "TextImageDataLoaderForTest",
        "args":{
            "data_dir": "data_tests",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 4,
            "imgH": 48,
            "imgW": 850,
            "keep_ratio" : false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "CTCLoss",
        "args": {

        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,
        "valid_period": 1,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "test_disp": 10,
        "monitor": "off",
        "early_stop": 10,
        "tensorboard": true
    }
}
