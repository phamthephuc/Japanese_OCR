{
    "name": "Mnist_LeNet",
    "cuda": true,
    "gpu": 0,
    
    "arch": {
        "type": "MnistModel",
        "args": {}
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "n_cpu": 2,
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "type":"StepLR",
        "args":{
            "step_size":50,
            "gamma":0.1
        }
    },
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
