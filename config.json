{
    "name": "CRNN_Net",
    "n_gpu": 1,

    "arch": {
        "type": "Model",
        "args": {
            "imgH": 48,
            "imgW": 850,
            "input_channel": 1,
            "output_channel": 512,
            "num_fiducial": 20,
            "hidden_size": 256,
            "num_class": 4190,
            "batch_max_length": 25
        }
    },

    "data_loader": {
        "type": "TextImageDataLoader",
        "args":{
            "data_dir": "out",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 4,
            "imgH": 48,
            "imgW": 850,
            "keep_ratio" : false
        }
    },
    "data_loader_test": {
        "type": "TextImageDataLoaderForTest",
        "args":{
            "data_dir": "data_tests",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 4,
            "imgH": 48,
            "imgW": 850,
            "keep_ratio" : false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "CTCLoss",
        "args": {

        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,
        "valid_period": 1,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "test_disp": 10,
        "monitor": "off",
        "early_stop": 10,
        "tensorboard": true
    }
}
